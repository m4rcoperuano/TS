@model Domain.Models.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Add New Project</h3>
        </div>
    </div>

    @using (Html.BeginForm("Edit", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.ProjectM.ProjectName, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(x => x.ProjectM.ProjectName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ProjectM.ProjectName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ProjectM.ProjectNumber, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(x => x.ProjectM.ProjectNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ProjectM.ProjectNumber)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.ProjectM.ClientId, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-8">
                        @Html.DropDownListFor(x => x.ProjectM.ClientId, Model.ClientSL, "Select Client", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ProjectM.ClientId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ProjectM.Notes, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-8">
                        @Html.TextAreaFor(x => x.ProjectM.Notes, new { @class = "form-control" })                        
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-offset-8 col-md-2">
                <a href="@Url.Action("Manage", "Project")" class="btn btn-info btn-block">Manage Projects
                    <i class="glyphicon glyphicon-list-alt"></i>
                </a>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-block">
                    Save Project
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                </button>
            </div>
        </div>
        @Html.HiddenFor(x=>x.ProjectM.CreatedByUserId)
         @Html.HiddenFor(x => x.ProjectM.id);        
    }

</div>
<!-- // Widget END -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
