@model Domain.ViewModels.ClientProfileViewModel

@{
    ViewBag.Title = "Create Client";
    ViewBag.ClientActive = "active";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Add New Client</h3>
        </div>
    </div>

    @using (Html.BeginForm("Create", "Client", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.ClientProfileM.ClientName, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(x => x.ClientProfileM.ClientName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.ClientProfileM.ClientName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ClientProfileM.Address, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(x => x.ClientProfileM.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.ClientProfileM.Address)
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(x => x.ClientProfileM.Address2, new { @class = "col-lg-4 control-label" })

                    <div class="col-lg-8">
                        @Html.TextBoxFor(x => x.ClientProfileM.Address2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.ClientProfileM.Address2)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.ClientProfileM.City, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(x => x.ClientProfileM.City, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.ClientProfileM.City)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ClientProfileM.StateId, new { @class = "col-lg-4 control-label" })

                    <div class="col-lg-8">
                        @Html.DropDownListFor(x => x.ClientProfileM.StateId, Model.StatesSL, "Select One", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.ClientProfileM.StateId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ClientProfileM.Zip, new { @class = "col-lg-4 control-label" })
                    <div class="col-lg-4">
                        @Html.TextBoxFor(x => x.ClientProfileM.Zip, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.ClientProfileM.Zip)
                    </div>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(x => x.ClientProfileM.Zip4, new { @class = "form-control", placeholder = "Last 4 (Zip)" })
                    </div>
                </div>
            </div>

            @Html.HiddenFor(x => x.ClientProfileM.CompanyLocationId)
        </div>
        
        <div class="row">
            <div class="col-md-offset-8 col-md-2">
                <a href="@Url.Action("Manage", "Client")" class="btn btn-info btn-block">
                    Manage Clients
                    <i class="glyphicon glyphicon-list-alt"></i> 
                </a>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary btn-block">
                    Save Client
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                </button>
            </div>
        </div>
    }

</div>
<!-- // Widget END -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}